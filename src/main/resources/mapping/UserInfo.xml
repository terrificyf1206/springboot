<?xml version="1.0" encoding="UTF-8" ?>
         <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
         <mapper namespace="com.hx.springboot.mapper.UserInfoMapper" >
         <select id="getUserInfos" resultType="com.hx.springboot.entity.UserInfo">
            select * from user_info where userCode = #{userCode}
         </select>


         <select id="getUserRoleInfos" resultType="com.hx.springboot.entity.UserRoleInfo">
             select * from user_role_r where userCode = #{userCode}
         </select>
     </mapper>
